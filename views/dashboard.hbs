<form action="/dashboard" method="POST">
    <h1>Create a Post!</h1>
    {{#each errors}}
        <p class="error text-center">{{this}}</p>
    {{/each}}
    <input type="text" name="title" placeholder="Title your Post" required>
    <input type="text" name="text" placeholder="Write your Post" required>
    <button type="submit">Send Post</button>
</form>

<section class="column align-center post-output">
    {{#each posts}}
        <div class="box post text-center">
            <div class="row text-center justify-between align-center">
                <h2>{{title}}</h2>
                <p>Posted by {{author.username}} on {{date}}</p>
            </div>
            <h3>{{text}}</h3>
        </div>
    {{/each}}
</section>