<form id="postForm" action="/dashboard" method="POST">
    <h1 class="accent">Create a Post!</h1>
    {{#each errors}}
    <p class="error text-center">{{this}}</p>
    {{/each}}
    <input type="text" name="title" placeholder="Title your Post" required>
    <input type="text" id="inputField" name="text" placeholder="Write your Post" required>
    <p>Character count: <span id="charCount">0</span>/500</p>
    <button id="submitBtn" type="submit">Send Post</button>
</form>

<section class="column align-center post-output">
    {{#each posts}}
        <div class="box post text-center">
            <div class="post-heading row text-center justify-between align-center">
                <h2 class="accent">{{title}}</h2>
                <p class="post-author accent">Posted by {{author.username}} on {{date}}</p>
            </div>
            <h3>{{text}}</h3>
        </div>
    {{/each}}
</section>